{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Yep Anywhere",
  "version": "0.1.0",
  "identifier": "com.yepanywhere.mobile",
  "build": {
    "beforeBuildCommand": "pnpm prepare-frontend",
    "frontendDist": "../../../packages/client/dist-remote"
  },
  "app": {
    "windows": [{ "title": "Yep Anywhere", "fullscreen": false }],
    "security": { "csp": null }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "iOS": { "minimumSystemVersion": "15.0" }
  },
  "plugins": {
    "deep-link": {
      "mobile": [{ "host": "yepanywhere.com", "pathPrefix": ["/open"] }]
    }
  }
}
